<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Transisi dari start -> end -->
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="700">

        <!-- Sedikit easing & fade untuk terlihat halus -->
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchRegionId="@id/buttonmulai"
            app:touchAnchorId="@id/buttonmulai"
            app:touchAnchorSide="top" />

        <!-- KeyFrames (opsional): fade out button saat animasi -->
        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/buttonmulai"
                app:framePosition="50"
                android:alpha="0.4"/>
        </KeyFrameSet>
    </Transition>

    <!-- STATE AWAL (posisi sesuai layoutmu) -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="244dp"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"/>

        <Constraint android:id="@id/judul"
            app:layout_constraintTop_toBottomOf="@id/Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:alpha="1"/>

        <Constraint android:id="@id/deskripsi"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:alpha="1"/>

        <Constraint android:id="@id/buttonmulai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginBottom="112dp"
            android:alpha="1"/>
    </ConstraintSet>

    <!-- STATE AKHIR (logo naik ke atas, judul & deskripsi fade out, tombol menghilang) -->
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:alpha="1"/>

        <Constraint android:id="@id/judul"
            app:layout_constraintTop_toBottomOf="@id/Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:alpha="0"/>

        <Constraint android:id="@id/deskripsi"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"/>

        <Constraint android:id="@id/buttonmulai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:alpha="0"/>
    </ConstraintSet>
</MotionScene>
