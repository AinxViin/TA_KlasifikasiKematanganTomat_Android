<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijau_muda"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/hijau_tua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hijau_tua"
            app:title="MineTomat"
            app:titleCentered="true"
            app:titleTextColor="@color/hijau_muda" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/buttonscan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tbJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catatan Penting"
                android:textColor="@color/hijau_tua"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gunakan panduan berikut untuk meningkatkan akurasi dari model machine learning"
                android:textColor="@color/hijau_tua"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/icSun"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/matahari"/>

                <TextView
                    android:id="@+id/tvPoint1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Cahaya matahari yang cukup"
                    android:textColor="@color/hijau_tua"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/icPhoneTomato"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/jarak"/>

                <TextView
                    android:id="@+id/tvPoint2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Jarak ambil gambar 15â€“20cm"
                    android:textColor="@color/hijau_tua"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/icTomato"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/tvPoint3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Latarbelakang polos dan tidak banyak objek"
                    android:textColor="@color/hijau_tua"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/icNoFlash"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flash"/>

                <TextView
                    android:id="@+id/tvPoint4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Hindari hasil gambar dengan pantulan flash"
                    android:textColor="@color/hijau_tua"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/tvDaftarKlasifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nb: Aplikasi ini hanya dapat mengklasifikasikan tingkat kematangan mentah, setengah matang, dan matang"
                android:textColor="@color/hijau_tua"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonscan"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Scan"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/hijau_muda"
        app:cornerRadius="14dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/hijau_tua" />

</androidx.constraintlayout.widget.ConstraintLayout>
